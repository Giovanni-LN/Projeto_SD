generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assento {
  id             Int           @id @default(autoincrement())
  fileira        String        
  numero         Int           
  positionNumber String        @unique // Suporta 'A1', 'B2', etc.
  status         statusAssento @default(LIVRE)
  pagamentos     Pagamento[]
  price          Decimal

  sessao         Sessao        @relation(fields: [sessaoId], references: [id], onDelete: Cascade)
  sessaoId       Int

  @@map("assentos")
}

model Sessao {
  id        Int        @id @default(autoincrement())
  nome      String
  data      DateTime
  horario   String
  assentos  Assento[]

  @@map("sessoes")
}

model Pagamento {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  assento   Assento @relation(fields: [assentoId], references: [id], onDelete: Cascade)
  assentoId Int     // Removido @unique para permitir m√∫ltiplos pagamentos

  @@map("pagamentos")
}

enum statusAssento {
  OCUPADO
  LIVRE
}
